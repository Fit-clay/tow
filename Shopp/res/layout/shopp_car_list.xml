<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
     >

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/check1"
            android:layout_width="wrap_content"
            android:layout_height="150px"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical" />

        <ImageView
             android:layout_marginLeft="50dp"
            android:id="@+id/shopp_car_img"
            android:layout_width="150px"
            android:layout_height="150px"
            android:src="@android:drawable/ic_menu_preferences" />

        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shoop_car_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="书名" />

            <TextView
                android:id="@+id/shoop_car_auther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实体书" />

                <EditText
                    android:id="@+id/shoop_car_entbook"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/shoop_car_entprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单价" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电子书" />

                <EditText
                    android:id="@+id/shoop_car_elebook"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/shoop_car_eleprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单价" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/zongjia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="总计"
        android:textSize="24sp" />

</LinearLayout>